[Unit]
Description=WireGuard Prometheus Exporter
Documentation=https://github.com/itefixnet/prometheus-wireguard-exporter
After=network.target wg-quick.target

[Service]
Type=simple
User=wireguard-exporter
Group=wireguard-exporter
# If using Docker mode, uncomment to allow access to /var/run/docker.sock
# SupplementaryGroups=docker
EnvironmentFile=/opt/wireguard-exporter/wireguard-exporter.conf
WorkingDirectory=/opt/wireguard-exporter
ExecStart=/opt/wireguard-exporter/http-server.sh start
ExecStop=/opt/wireguard-exporter/http-server.sh stop
Restart=on-failure
RestartSec=10

# Security settings
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ProtectHome=true

# Capabilities needed to read WireGuard stats
AmbientCapabilities=CAP_NET_ADMIN
CapabilityBoundingSet=CAP_NET_ADMIN

[Install]
WantedBy=multi-user.target
